{{ 'section-main-blog.css' | asset_url | stylesheet_tag }}
{{ 'section-main-blog.js' | asset_url | script_tag }}

<section class="intro" style="background-image: url('{{ article.image.src | img_url:'master' }}')">

  <div>
  <div class="divH1">
    <h2>
      <span>Blog</span>
      <span>Vinyl Way</span>
    </h2>
  </div>

  <div class="divH2">
  <h1>
    {{ article.title }}
  </h1>
  </div>
  </div>

  
</section>

<section class="listArticles">

{% render 'listFilterBlog' %}

  <div class="divArticle">
    <h1>{{ article.title }}</h1>
    <p class="extrait">{{ article.excerpt }}</p>
    <p>{{ article.content }}</p>
  </div>
  
</section>