 {{ 'main-cart-items.css' | asset_url | stylesheet_tag }}
{{ 'main-cart-items.js' | asset_url | script_tag }}


<cart-items class="{% if cart == empty %}is-empty{% endif %}">
 <section class="cartTemplate">

        <div class="cartTemplateHeader">
            <h1>Votre panier</h1>
            <a href="/collections/carreaux-adhesifs/">Continuer mes achats</a>
        </div>

        <div class="cartGrid">

          {% for item in cart.items %}
            
        <div>
            
        <div class="listTiles">
                <ul>
                    <li>
                        <img src="{{ item.product.images[2] | image_url: width: 300 }}">
                    </li>
                    <li>
                        <img src="{{ item.product.images[3] | image_url: width: 300 }}">
                    </li>
                    <li>
                        <img src="{{ item.product.images[4] | image_url: width: 300 }}">
                    </li>
                    <li>
                        <img src="{{ item.product.images[5] | image_url: width: 300 }}">
                    </li>
                    <li>
                        <img src="{{ item.product.images[6] | image_url: width: 300 }}">
                    </li>
                    <li>
                        <img src="{{ item.product.images[7] | image_url: width: 300 }}">
                    </li>
                    <li>
                        <img src="{{ item.product.images[8] | image_url: width: 300 }}">
                    </li>
                    <li>
                        <img src="{{ item.product.images[9] | image_url: width: 300 }}">
                    </li>
                </ul>
                <p>Cette référence est composée de 4 motifs.</p>
            </div>
            <div class="productContent">
                <div>
            <h2>{{ item.product.title }}<small>(x1)</small></h2>
            <h3><strong>Carreaux</strong> adhésifs <small>20 x 20 cm</small></h3>
            </div>
            <div>
            <div class="productPrice">
                 <div>
                        <span class="price"><span id="price">200.99</span>€</span>
                    </div>
                    <div>
                        <span id="downQuantity">-</span>
                        <input id="quantityCheckout" type="number" value="1" min="1" max="999" maxlength="3" />
                        <span id="upQuantity">+</span>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" aria-hidden="true" focusable="false" role="presentation" class="icon icon-remove">
  <path d="M14 3h-3.53a3.07 3.07 0 00-.6-1.65C9.44.82 8.8.5 8 .5s-1.44.32-1.87.85A3.06 3.06 0 005.53 3H2a.5.5 0 000 1h1.25v10c0 .28.22.5.5.5h8.5a.5.5 0 00.5-.5V4H14a.5.5 0 000-1zM6.91 1.98c.23-.29.58-.48 1.09-.48s.85.19 1.09.48c.2.24.3.6.36 1.02h-2.9c.05-.42.17-.78.36-1.02zm4.84 11.52h-7.5V4h7.5v9.5z" fill="currentColor"></path>
  <path d="M6.55 5.25a.5.5 0 00-.5.5v6a.5.5 0 001 0v-6a.5.5 0 00-.5-.5zM9.45 5.25a.5.5 0 00-.5.5v6a.5.5 0 001 0v-6a.5.5 0 00-.5-.5z" fill="currentColor"></path>
</svg>
                    </div>                
                </div>
            </div>
            </div>        
        </div>
                
            {% endfor %}

        <div class="divTotal">
        <div>
            <div>
            <button class="btnCheckout">Procéder au paiement
        <small>Paiement en 4 fois sans frais</small>
            </button>
            <button class="btnPaypal">
                <img src="paypal.svg">
            </button>
             </div>
        <span class="infoDelivery">Livraison offerte à partir de 49€</span>
        <span class="btnInfos">réductions & livraison</span>
        </div>
            <div class="productPrice">
                <p>Sous-total :</p>
                <div>
                    <div class="discount">
                        <div><span id="regularPrice">60</span>€</div>
                        <span id="discountPercent">10%</span>
                    </div>
                    <span class="price"><span id="price">40</span>€</span>
                </div>
            </div>

        </div>
            
        </section>

  </form>
</cart-items>


          
